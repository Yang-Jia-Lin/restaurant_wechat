/* 左侧门店信息 */
.top_info_root {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	background-color: rgb(252, 251, 247);
	margin-bottom: 10rpx;
}

.store_root {
	width: 60%;
	padding: 10rpx 20rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	font-size: 14px;
}

.store_name_root {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}

.store_name {
	font-size: 20px;
	font-weight: bolder;
	color: rgb(128, 58, 0);
}

.store_info {
	color: rgb(158, 158, 157);
}

/* 右侧选择 */
.type_root {
	width: 30%;
	height: 70rpx;
	background-color: white;
	border-radius: 30rpx;
	display: flex;
	flex-direction: row;
	font-size: 18px;
	margin: 44px 20rpx 10rpx 0;
}

.type-on {
	width: 50%;
	height: 60rpx;
	line-height: 60rpx;
	text-align: center;
	padding: 0 10rpx;
	margin: 5rpx;
	background-color: rgb(150, 102, 13);
	color: white;
	border-radius: 25rpx;
	font-weight: bold;
}

.type-off {
	width: 50%;
	height: 70rpx;
	line-height: 70rpx;
	text-align: center;
	padding: 0 10rpx;
	background-color: white;
	color: black;
	border-radius: 30rpx;
}





