.type_root{
	display: flex;
	flex-direction: row;
	justify-content: center;
	margin: 24rpx;
}
.on{
    width: 40%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    padding: 0 10rpx;
    margin: 5rpx;
    background-color: rgb(150, 102, 13);
    color: white;
    border-radius: 25rpx;
    font-weight: bold;
}
.off{
    width: 40%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    padding: 0 10rpx;
    background-color: white;
    color: black;
    border-radius: 30rpx;
}