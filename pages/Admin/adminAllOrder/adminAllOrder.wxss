page {
    background-color:#EBE0CC;
}
/* 订单块整体 */
.order_list_root {
    background-color: white;
    margin: 0 25rpx 25rpx 25rpx;
    width: 93%;
    border-radius: 55rpx;
}
.title_root {
    margin: 30rpx 45rpx 20rpx 45rpx;
    border-bottom: 13rpx solid #dadada;

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.pickup_number{
    color: rgb(95, 48, 14);
    font-size: 28px;
    font-weight: bold;
}
.time{
    font-size: 22px;
    font-weight: 550;
    color: rgb(185, 48, 48);
}

/* 中间内容区域 */
.dishes_root {
    margin: 0 50rpx 10rpx 50rpx;
    display: flex;
    flex-direction: column;
}
.dish_title_root{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.dish_name{
    font-size: 24px;
    font-weight: 700;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.names{
    padding-right: 20rpx;
}
.dish_type{
    color: rgb(185, 48, 48);
    font-weight: 550;
    font-size: 20px;
}
.dish_quantity{
    font-size: 18px;
}
.big{
    font-size: 22px;
    color: red;
    font-weight: bold;
}
.dish_detail_root{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: start;
    margin-bottom: 17rpx;
}

.detail2{
    margin-right: 20rpx;
    color: rgb(151, 76, 0);
    font-size: 18px;
    font-weight: 500;
}
.detail3{
    margin: 0 10rpx;
    color: rgb(88, 45, 2);
    font-size: 18px;
    font-weight: 500;
}


/* 点击操作 */
.button1{
    background-color: rgb(226, 226, 226);
    font-size: 20px;
    font-weight: 550;
    text-align: center;
    line-height: 70rpx;
    width: 30%;
    height: 70rpx;
    margin: 0 auto;
    border: 1px solid black;
}


/* 备注 */
.order_note{
    padding: 10rpx 50rpx;
    font-size: 40rpx;
    color: brown;
}
.phone{
    padding: 10rpx 50rpx;
    font-size: 40rpx;
    color: black;
}

.price-root{
    margin: 0 55rpx 30rpx 55rpx;
    text-align: end;
    font-size: 21px;
    color: rgb(0, 0, 0);
    font-weight: bold;
}
/* 底部下单时间 */
.order_time {
    padding: 10rpx 0;
    width: 100%;
    text-align: center;
    font-size: 30rpx;
}