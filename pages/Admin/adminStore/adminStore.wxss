.type_root{
	display: flex;
	flex-direction: row;
	justify-content: center;
    margin: 24rpx;
    font-size: 20px;
}
.on{
    width: 30%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    margin: 0 25rpx;

    background-color: rgb(150, 102, 13);
    color: white;
    border-radius: 25rpx;
    font-weight: bold;
}
.off{
    width: 30%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    margin: 0 25rpx;

    background-color: white;
    color: black;
    border-radius: 30rpx;
}



/* 菜单区域 */
.menu-root{
    display: flex;
    flex-direction: row;
}
.menu-title{
    text-align: center;
    font-size: 22px;
    font-weight: bold;
    color: rgb(160, 91, 0);
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 2px solid rgb(146, 85, 45);
}
.left{
    background-color: white;
    flex: 1
}
.right {
    background-color: white;
    border-left: 1px solid rgb(98, 61, 0);
    flex: 1
}
.dish-root{
    border: 1px solid rgb(184, 152, 131);
    padding: 10rpx;
}
.dish-name{
    text-align: center;
    font-size: 20px;
}
.dish-status{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    color: lightslategray;
    padding: 10rpx;
}
.dish-on{
    color: white;
    background-color: rgb(150, 102, 13);
    border-radius: 20rpx;
    padding: 5rpx 25rpx;
}
.dish-off{
    padding: 5rpx 25rpx;
}