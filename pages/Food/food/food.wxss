.main {
	width: 100%;
	height: 100%;
}

/* 左侧菜单整体 */
.left {
	width: 30%;
	height: 92vh;
	overflow: auto;
	float: left;
	box-sizing: border-box;
	padding: 5rpx;
}

/* 左侧菜单分类小块 */
.left-tab {
	height: 100rpx;
	line-height: 100rpx;
	text-align: center;
	position: relative;
}

/* 左侧选中小块 */
.active {
	color: #a19354;
	background-color: rgb(255, 252, 241);
	border-radius: 15rpx;
	box-shadow: 0 0 15rpx rgba(0, 0, 0, 0.15);
}

.active2 {
	color: #857633;
	font-size: 24px;
	font-weight: bolder;
	background-color: rgb(255, 252, 241);
	border-radius: 15rpx;
	box-shadow: 0 0 15rpx rgba(0, 0, 0, 0.15);
}

.small-name {
	font-size: 16px;
	font-weight: normal;
}

/* 右侧菜单整体 */
.right {
	height: 92vh;
	width: 70%;
	float: right;
	overflow: auto;
	box-sizing: border-box;
	padding-bottom: 90rpx;
	background-color: rgb(255, 255, 255);
	border-radius: 15rpx;
}

/* 右侧菜单分类文字 */
.right .title {
	font-size: 30rpx;
	height: 100rpx;
	line-height: 140rpx;
	color: rgb(121, 105, 105);

	padding-left: 20rpx;
}

/* 右侧菜品 */
.dish_root {
	height: 250rpx;
	width: 99%;
	padding: 15rpx;

	display: flex;
	align-items: center;
}

.dish_img {
	width: 200rpx;
	height: 200rpx;
	line-height: 200rpx;
	border-radius: 15rpx;
	text-align: center;
	margin-left: 10rpx;
	margin-right: 30rpx;
}

.dish_detail {
	flex: 1;
	height: 250rpx;
	min-width: 0;
	display: flex;
	flex-direction: column;
	align-content: stretch;
}

.dish_title {
	color: rgb(119, 85, 10);
	font-weight: 550;
	font-size: 36rpx;
	width: auto;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	word-wrap: normal;
	word-wrap: break-word;
	word-break: break-all;
	margin: 10rpx;
}

.dish_title2 {
	color: rgb(85, 58, 1);
	font-weight: 500;
	font-size: 40rpx;
	width: auto;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	word-wrap: normal;
	word-wrap: break-word;
	word-break: break-all;
	margin: 30rpx 10rpx 10rpx 10rpx;
}

.dish_sale {
	font-size: 25rpx;
	width: auto;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	word-wrap: break-word;
	margin: 0 15rpx;
}

/*价格与选规格*/
.dish_price_root {
	padding: 60rpx 20rpx 0 0rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-around;
}

.dish_stepper {
	height: 40rpx;
	width: 90rpx;
	text-align: center;
	line-height: 40rpx;
	font-size: 27rpx;
	color: rgb(240, 231, 216);
	background-color: rgb(102, 83, 16);
	border-radius: 25rpx;
	padding: 5rpx 10rpx;
	margin-top: 5rpx;
}

.dish_stepper2 {
	width: 125rpx;
	margin: 6rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	align-items: flex-start;
}

.dish_stepper_jiajian {
	width: 40rpx;
	height: 40rpx;
}

.dish_price {
	font-weight: bold;
	font-size: 40rpx;
	color: #b87e2d;
}

.dish_price:before {
	content: "￥";
	font-size: 16px;
}


