page {
    background-color:#EBE0CC;
}

/* 导航条 */
.navbar {
    display: flex;
    background: #fff;
    margin-bottom: 25rpx;
}
.none_tab {
    position: relative;
    top: 20rpx;
    color: #999;
    font-size: 40rpx;
}
.navbar .item {
    position: relative;
    flex: auto;
    font-size: 30rpx;
    width: 100rpx;
    text-align: center;
    line-height: 80rpx;
    color: #333;
    border-bottom: 6rpx solid #ddd;
}
.navbar .item.active {
    color: #333;
    border-bottom: 8rpx solid #ad8500b0;
}
.navbar .item.active:after {
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 4rpx;
}
.number{
    padding: 0 15rpx;
    color: rgb(197, 126, 34);
    font-size: 20px;
    font-weight: bold;
}


/* 订单块整体 */
.order_list_root {
    background-color: white;
    margin: 0 25rpx 25rpx 25rpx;
    width: 93%;
    border-radius: 55rpx;
}
.title_root {
    margin: 30rpx 45rpx 20rpx 45rpx;
    border-bottom: 13rpx solid #dadada;

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.pickup_number{
    color: rgb(95, 48, 14);
    font-size: 28px;
    font-weight: bold;
}
.time{
    font-size: 22px;
    font-weight: 550;
    color: rgb(185, 48, 48);
}

/* 中间内容区域 */
.dishes_root {
    margin: 0 50rpx 10rpx 50rpx;
    display: flex;
    flex-direction: column;
}
.dish_title_root{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.dish_name{
    font-size: 24px;
    font-weight: 700;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.dish_type{
    color: rgb(185, 48, 48);
    font-weight: 550;
    font-size: 20px;
}
.dish_quantity{
    font-size: 18px;
}
.big{
    font-size: 22px;
    color: red;
    font-weight: bold;
}
.dish_detail_root{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: start;
    margin-bottom: 17rpx;
}
.detail1{
    margin: 0 10rpx 0 0;
    font-size: 20px;
    font-weight: 550;
    color: rgb(88, 45, 2);
}
.detail2{
    margin: 0 10rpx;
    color: rgb(151, 76, 0);
    font-size: 18px;
    font-weight: 500;
}
.detail3{
    margin: 0 10rpx;
    color: rgb(88, 45, 2);
    font-size: 18px;
    font-weight: 500;
}


/* 点击操作 */
.button_root{
    margin: 10rpx 70rpx;
    padding: 20rpx 0;
    border-bottom: 1px solid rgb(133, 80, 11);
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}
.button1{
    background-color: wheat;
    border-radius: 25rpx;
    box-shadow: 0 0 20rpx rgba(173, 108, 2, 0.15);
    font-size: 22px;
    font-weight: 550;
    text-align: center;
    line-height: 90rpx;
    width: 40%;
    height: 90rpx;
}
.button2{
    background-color:rgb(223, 223, 223);
    border-radius: 25rpx;
    box-shadow: 0 0 20rpx rgba(161, 161, 161, 0.15);
    font-size: 20px;
    text-align: center;
    line-height: 90rpx;
    width: 32%;
    height: 90rpx;
}


/* 备注 */
.order_note{
    padding: 10rpx 50rpx;
    font-size: 40rpx;
    color: brown;
}
.phone{
    padding: 10rpx 50rpx;
    font-size: 40rpx;
    color: black;
}
/* 底部下单时间 */
.order_time {
    padding: 10rpx 0;
    width: 100%;
    text-align: center;
    font-size: 30rpx;
}